header {
  background: url(<%= image_url('exotic-house.jpg') %>) no-repeat fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-position: -150% 125%;
  background-size: cover;
  height: 70vh;
  width: 100%;
}

nav {
  height: 60px;
  position: relative;
  top: 20px;
  // background: rgba(255,255,255,0.60);
}

#logo {
  width: 60px;
}

#nav-container {
  color: white;
  width: 100%;
  padding: 0 2.5rem;
  ul li {
    font-size: 1.6rem;
  }
}
#header-container {
  height: 100vh;
  color: white;
  h1 {
    font-size: 4.5rem;
  }
}

#about {
  height: 450px;
}

#about-container {
  max-width: 120rem;
  height: 35rem;
}

.text-align {
  text-align: center;
}

.feature-box {
  width: 28rem;
  padding: 2rem;
  img {
    width: 5rem;
    margin: 1rem;
  }
}

.call span {
  font-weight: 700;
}

#contain-features {
  margin-top: 3rem;
}

#logo {
  font-weight: 900;
  font-size: 3.8rem !important;
  // &::first-letter {
  //   transform: rotateY(180deg);
  // }
}

/////////////////////////
 // Contact Form Style //
 ///////////////////////
#contact-form {
  padding: 2.5rem 0;
}

#form-container {
  max-width: 120rem;
}

.form {
  input {
    padding: 1.25rem;
    border-radius: .8rem;
    font-size: 1.6rem;
    &::-webkit-input-placeholder {
      color:black;
    }
  }
}

.bg-red {
  background: red;
}
.bg-blue {
  background: blue;
}
.bg-purple {
  background: purple;
}
.bg-pink {
  background: pink;
}
.bg-black-50 {
  background: rgba(0,0,0,0.55);
}
.bg-dark {
  background: #333;
  color: white;
}
.container {
  max-width: 120rem;
}
