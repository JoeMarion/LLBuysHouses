/////////////////////////
// Contact Form Style //
///////////////////////
#contact-form {
  padding: 2.5rem 0;
}

#form-container {
  max-width: 120rem;
  h2 {
    margin-bottom: 1rem;
  }
}

.form {
  input {
    padding: 1.25rem;
    border-radius: .8rem;
    font-size: 1.6rem;
    background: $color2;
    color: $color5;
    font-weight: 400;
    &::-webkit-input-placeholder {
      color: $color4;
      transition: 0.5s all;
      font-weight: 300;
    }
    
    &:focus {
      &::-webkit-input-placeholder {
        opacity: 0;
      }
    }
  }
  
  button {
    padding: 1.25rem;
    border-radius: .8rem;
    font-size: 1.75rem;
    font-family: 'Prompt', sans-serif;
    font-weight: 800;
    letter-spacing: 1.5px;
    background: #65AFFF;
    color: $color1;
    padding-left: 1.9rem;
    padding-right: 1.9rem;
    box-shadow: 0 2px 5px black;
    position: relative;
    top: -1px;
    transition: .5s all;
    
    &:active {
      box-shadow: 0 0 0 black;
      top: 0;
    }
  }
}

